profiles {

    singularity {
        process.executor = 'local'

        // Enable Singularity
        singularity.enabled   = true
        singularity.autoMounts = true

        // Use the image we just built (path relative to the project root)
        process.container = "${baseDir}/wes-scdrs.sif"
    }
}

process {
    cpus   = 4
    memory = '8 GB'
    errorStrategy = 'terminate'
}
