profiles {

    singularity {
        process.executor = 'local'
        singularity.enabled = true
        process.container = "${baseDir}/containers/wes-scdrs.sif"
    }

    # optionally keep a pure-conda version too:
    standard {
        conda.enabled = true
        process.executor = 'local'
        conda = "${baseDir}/env/environment.yml"
    }
}
