// Default parameters (can be overridden on CLI)
params {
    input  = 'data'     // interpreted as a subfolder inside WESscDRS/ (see main.nf)
    outdir = 'results'  // final results dir in the userâ€™s working directory
}

// Global process defaults
process {
    cpus   = 4
    memory = '8 GB'
    errorStrategy = 'terminate'

    // Use a Python container from Docker Hub; Apptainer/Singularity will pull it
    container = 'docker://python:3.11-slim'
}

// Use Apptainer/Singularity automatically
singularity {
    enabled    = true          // Nextflow will use apptainer if singularity is not present
    autoMounts = true
}

// Optional profile for people who like explicit profiles
profiles {
    singularity {
        // Could add executor/scheduler settings here later (e.g., SLURM)
    }
}
